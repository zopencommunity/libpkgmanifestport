# bump: libpkgmanifest-version /LIBPKGMANIFEST_VERSION="(.*)"/ git:https://github.com/rpm-software-management/libpkgmanifest.git|*
LIBPKGMANIFEST_VERSION="0.5.9"

###
### Build control file for the libpkgmanifest port
###

###
### Required Environment Variables
###
export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_STABLE_URL="https://github.com/rpm-software-management/libpkgmanifest/archive/refs/tags/v${LIBPKGMANIFEST_VERSION}.tar.gz"
export ZOPEN_STABLE_DEPS="cmake make pkgconfig yamlcpp check_python"
export ZOPEN_DEV_URL=""
export ZOPEN_DEV_DEPS="cmake make pkgconfig yamlcpp check_python"
export ZOPEN_CATEGORIES="development library"
export ZOPEN_RUNTIME_DEPS=""
export ZOPEN_CONFIGURE="cmake"
export ZOPEN_COMP=OPENXL
# export ZOPEN_SYSTEM_PREREQ="zos25" # optional system pre-req (default=zos25)


###
### Build settings (Port type: BUILD, Build system: GNU Make)
###
### Optional Settings for GNU Make build system (Autotools)
export ZOPEN_EXTRA_CONFIGURE_OPTS="-DWITH_PYTHON=OFF -DWITH_TESTS=OFF" # Add any additional configure options here
#export ZOPEN_EXTRA_CFLAGS="-Wno-error" # Add any additional compiler options here


###
### Required user-supplied functions
###

zopen_check_results() {
  dir="$1" 
  pfx="$2" 
  chk="$1/$2_check.log"
  # Add logic to extract the test results here:
  echo "actualFailures:0" 
  echo "totalTests:1" 
  echo "expectedFailures:0"
  echo "expectedTotalTests:1"
}

zopen_get_version() {
  echo "$LIBPKGMANIFEST_VERSION"
}


###
### Custom Build Logic (if applicable)
###
# For libraries, this hook exports variables for other ports to use.
zopen_append_to_env() {
  cat <<END
if [ ! -z "\$ZOPEN_IN_ZOPEN_BUILD" ]; then
  export ZOPEN_EXTRA_CFLAGS="\${ZOPEN_EXTRA_CFLAGS} -I\${PWD}/include"
  export ZOPEN_EXTRA_CXXFLAGS="\${ZOPEN_EXTRA_CXXFLAGS} -I\${PWD}/include"
  export ZOPEN_EXTRA_LDFLAGS="\${ZOPEN_EXTRA_LDFLAGS} -L\${PWD}/lib"
  export ZOPEN_EXTRA_LIBS="\${ZOPEN_EXTRA_LIBS} -lpkgmanifest"
fi
END
}

